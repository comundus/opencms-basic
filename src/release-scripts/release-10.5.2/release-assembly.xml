<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>release</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.comundus.opencms:webapp</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>target/webapp/WEB-INF/lib</directory>
                        <outputDirectory>libs</outputDirectory>
                        <includes>
                            <include>my.module.one.jar</include>
                            <include>my.module.two.jar</include>
                        </includes>
                    </fileSet>
                    <fileSet>
                        <directory>target/webapp/WEB-INF/config</directory>
                        <outputDirectory>config/ROOT/WEB-INF/config</outputDirectory>
                        <includes>
                            <include>opencms-search.xml</include>
                            <include>opencms-workplace.xml</include>
                        </includes>
                    </fileSet>
                    <fileSet>
                        <directory>target/webapp/WEB-INF/classes/org/opencms/main</directory>
                        <outputDirectory>.</outputDirectory>
                        <includes>
                            <include>version.properties</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>