<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.comundus.opencms</groupId>
        <artifactId>parent</artifactId>
        <version>7.5</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.comundus.opencms</groupId>
    <artifactId>webapp</artifactId>
    <packaging>war</packaging>
    <name>OpenCms Webapp</name>
    <version>7.5</version>
    <description>OpenCms Webapplikation</description>
    <url>http://opencms-maven.comundus.com</url>
    
    <scm>
        <!-- connection></connection -->
        <developerConnection>scm:svn:https://mavplugocms.svn.sourceforge.net/svnroot/mavplugocms/cm-opencms/opencms-basic/trunk/webapp/</developerConnection>
        <url>https://mavplugocms.svn.sourceforge.net/svnroot/mavplugocms/opencms-basic/trunk/webapp/</url>
        <tag/>
    </scm>

    <build>
        <finalName>webapp</finalName>
		<resources>
      		<resource>
        		<directory>src/main/webapp/WEB-INF/classes</directory>
				<targetPath>../webapp/WEB-INF/classes</targetPath>
        		<filtering>true</filtering>
      		</resource>
      		<resource>
        		<directory>src/main/webapp/WEB-INF/config</directory>
				<targetPath>../webapp/WEB-INF/config</targetPath>
        		<filtering>true</filtering>
      		</resource>
    	</resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>droptables</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <fileset>
                                <basedir>${basedir}/src/main/scripts</basedir>
                                <includes>
                                    <include>${drop_tables.sql}</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                    <execution>
                        <id>createtables</id>
                        <phase>package</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <fileset>
                                <basedir>${basedir}/src/main/scripts</basedir>
                                <includes>
                                    <include>${create_tables.sql}</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.comundus.maven</groupId>
                <artifactId>maven-vfs-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>setup</goal>
                            <goal>importusers</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

	<dependencies>    
        <dependency>
            <groupId>org.opencms</groupId>
            <artifactId>opencms</artifactId>
            <version>7.5</version>
        </dependency>
        <dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
    		<version>5.0.7</version>
    	</dependency>
    </dependencies>

</project>
