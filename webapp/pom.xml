<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.comundus.opencms</groupId>
        <artifactId>parent</artifactId>
        <version>8.5.2</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.comundus.opencms</groupId>
    <artifactId>webapp</artifactId>
    <packaging>war</packaging>
    <name>OpenCms Webapp</name>
    <description>OpenCms web application</description>
    <build>
        <finalName>webapp</finalName>
		<resources>
      		<resource>
        		<directory>src/main/webapp/WEB-INF/classes</directory>
				<targetPath>../webapp/WEB-INF/classes</targetPath>
        		<filtering>true</filtering>
      		</resource>
      		<resource>
        		<directory>src/main/webapp/WEB-INF/config</directory>
				<targetPath>../webapp/WEB-INF/config</targetPath>
        		<filtering>true</filtering>
      		</resource>
    	</resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>droptables</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <fileset>
                                <basedir>${basedir}/src/main/scripts</basedir>
                                <includes>
                                    <include>${drop_tables.sql}</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                    <execution>
                        <id>createtables</id>
                        <phase>package</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <fileset>
                                <basedir>${basedir}/src/main/scripts</basedir>
                                <includes>
                                    <include>${create_tables.sql}</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.comundus.maven</groupId>
                <artifactId>vfs-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>setup</goal>
                            <goal>importusers</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

	<dependencies>    
        <dependency>
            <groupId>org.opencms</groupId>
            <artifactId>opencms-core</artifactId>

        </dependency>
        <dependency>
			<groupId>${jdbcDriver.groupId}</groupId>
			<artifactId>${jdbcDriver.artifactId}</artifactId>
			<version>${jdbcDriver.version}</version>
    	</dependency>
    </dependencies>

    <distributionManagement>
        <site>
            <url>file:////Data02/projectsites/projects/cm-comundus/opencms-basic/webapp</url>
        </site>
    </distributionManagement>

</project>
